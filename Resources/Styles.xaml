<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Industrial Button Style -->
    <Style x:Key="IndustrialButton" TargetType="Button">
        <Setter Property="Background" Value="#FF3D4559"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="BorderBrush" Value="#FF5A6377"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            CornerRadius="3" Padding="15,10">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#FF4A5568"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="#FF6B7A94"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#FF2D3344"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Start Button (Green) -->
    <Style x:Key="StartButton" TargetType="Button" BasedOn="{StaticResource IndustrialButton}">
        <Setter Property="Background" Value="#FF2E7D32"/>
        <Setter Property="BorderBrush" Value="#FF4CAF50"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#FF388E3C"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Stop Button (Red) -->
    <Style x:Key="StopButton" TargetType="Button" BasedOn="{StaticResource IndustrialButton}">
        <Setter Property="Background" Value="#FFC62828"/>
        <Setter Property="BorderBrush" Value="#FFE53935"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#FFD32F2F"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Panel Style -->
    <Style x:Key="Panel" TargetType="Border">
        <Setter Property="Background" Value="#FF252B3B"/>
        <Setter Property="BorderBrush" Value="#FF3D4559"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="2"/>
    </Style>

    <!-- Value Display Style -->
    <Style x:Key="ValueDisplay" TargetType="Border">
        <Setter Property="Background" Value="#FF0D1117"/>
        <Setter Property="BorderBrush" Value="#FF3D4559"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10,5"/>
    </Style>
</ResourceDictionary>
