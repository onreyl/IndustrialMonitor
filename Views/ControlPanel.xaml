<UserControl x:Class="IndustrialMonitor.Views.ControlPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             DataContext="{Binding ControlPanelViewModel, Source={StaticResource Locator}}"
             d:DesignHeight="600" d:DesignWidth="300">
    
    <!-- Control Panel -->
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- System Status Panel -->
        <Border Grid.Row="0" Style="{DynamicResource Panel}" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Border Background="#FF1A1F2E" BorderBrush="#FF3D4559" BorderThickness="0,0,0,1">
                    <TextBlock Text="SYSTEM STATUS" Foreground="#FF90A4AE" FontSize="11" FontWeight="Bold" 
                               VerticalAlignment="Center" Margin="10,0"/>
                </Border>
                
                <StackPanel Grid.Row="1" Margin="10">
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Operating Mode:" Foreground="#FFB0BEC5" FontSize="11"/>
                        <Border Grid.Column="1" Style="{DynamicResource ValueDisplay}">
                            <TextBlock Text="{Binding SystemStatusText}" Foreground="{Binding SystemStatusColor}" FontSize="12" 
                                       FontWeight="Bold" FontFamily="Consolas"/>
                        </Border>
                    </Grid>
                    
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Process State:" Foreground="#FFB0BEC5" FontSize="11"/>
                        <Border Grid.Column="1" Style="{DynamicResource ValueDisplay}">
                            <TextBlock Text="MIXING" Foreground="#FF29B6F6" FontSize="12" 
                                       FontWeight="Bold" FontFamily="Consolas"/>
                        </Border>
                    </Grid>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Cycle Time:" Foreground="#FFB0BEC5" FontSize="11"/>
                        <Border Grid.Column="1" Style="{DynamicResource ValueDisplay}">
                            <TextBlock Text="00:15:32" Foreground="White" FontSize="12" 
                                       FontWeight="Bold" FontFamily="Consolas"/>
                        </Border>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Control Buttons -->
        <Border Grid.Row="1" Style="{DynamicResource Panel}" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Border Background="#FF1A1F2E" BorderBrush="#FF3D4559" BorderThickness="0,0,0,1">
                    <TextBlock Text="OPERATOR CONTROLS" Foreground="#FF90A4AE" FontSize="11" FontWeight="Bold" 
                               VerticalAlignment="Center" Margin="10,0"/>
                </Border>
                
                <StackPanel Grid.Row="1" Margin="10">
                    <Button Command="{Binding StartCommand}" Content="▶ START" Height="45" Margin="0,0,0,8" Style="{DynamicResource StartButton}"/>
                    <Button Command="{Binding StopCommand}" Content="■ STOP" Height="45" Style="{DynamicResource StopButton}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Process Values -->
        <Border Grid.Row="2" Style="{DynamicResource Panel}" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Border Background="#FF1A1F2E" BorderBrush="#FF3D4559" BorderThickness="0,0,0,1">
                    <TextBlock Text="PROCESS VALUES" Foreground="#FF90A4AE" FontSize="11" FontWeight="Bold" 
                               VerticalAlignment="Center" Margin="10,0"/>
                </Border>
                
                <StackPanel Grid.Row="1" Margin="10">
                    <!-- Tank Level -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="LT-101 Tank Level" Foreground="#FFB0BEC5" FontSize="11"/>
                            <ProgressBar Value="{Binding TankLevel}" Height="8" Margin="0,5,10,0" Background="#FF1A1F2E" 
                                         Foreground="#FF29B6F6" BorderThickness="0"/>
                        </StackPanel>
                        <Border Grid.Column="1" Style="{DynamicResource ValueDisplay}" MinWidth="70">
                            <TextBlock Text="{Binding TankLevel, StringFormat={}{0:F1} %}" Foreground="#FF29B6F6" FontSize="14" 
                                       FontWeight="Bold" FontFamily="Consolas" HorizontalAlignment="Right"/>
                        </Border>
                    </Grid>

                    <!-- Temperature -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="TT-101 Temperature" Foreground="#FFB0BEC5" FontSize="11"/>
                            <ProgressBar Value="{Binding Temperature}" Height="8" Margin="0,5,10,0" Background="#FF1A1F2E" 
                                         Foreground="#FFFFA726" BorderThickness="0"/>
                        </StackPanel>
                        <Border Grid.Column="1" Style="{DynamicResource ValueDisplay}" MinWidth="70">
                            <TextBlock Text="{Binding Temperature, StringFormat={}{0:F1} °C}" Foreground="#FFFFA726" FontSize="14" 
                                       FontWeight="Bold" FontFamily="Consolas" HorizontalAlignment="Right"/>
                        </Border>
                    </Grid>

                    <!-- Pressure -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="PT-101 Pressure" Foreground="#FFB0BEC5" FontSize="11"/>
                            <ProgressBar Value="{Binding Pressure, Mode=OneWay}" Maximum="6" Height="8" Margin="0,5,10,0" Background="#FF1A1F2E" 
                                         Foreground="#FFCE93D8" BorderThickness="0"/>
                        </StackPanel>
                        <Border Grid.Column="1" Style="{DynamicResource ValueDisplay}" MinWidth="70">
                            <TextBlock Text="{Binding Pressure, StringFormat={}{0:F1} bar}" Foreground="#FFCE93D8" FontSize="14" 
                                       FontWeight="Bold" FontFamily="Consolas" HorizontalAlignment="Right"/>
                        </Border>
                    </Grid>

                    <!-- Motor Speed -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="M-101 Motor Speed" Foreground="#FFB0BEC5" FontSize="11"/>
                            <ProgressBar Value="{Binding MotorSpeed}" Maximum="2000" Minimum="0" Height="8" Margin="0,5,10,0" Background="#FF1A1F2E" 
                                         Foreground="#FF66BB6A" BorderThickness="0"/>
                        </StackPanel>
                        <Border Grid.Column="1" Style="{DynamicResource ValueDisplay}" MinWidth="70">
                            <TextBlock Text="{Binding MotorSpeed, StringFormat={}{0} rpm}" Foreground="#FF66BB6A" FontSize="14" 
                                       FontWeight="Bold" FontFamily="Consolas" HorizontalAlignment="Right"/>
                        </Border>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Alarm History -->
        <Border Grid.Row="3" Style="{DynamicResource Panel}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Border Background="#FF1A1F2E" BorderBrush="#FF3D4559" BorderThickness="0,0,0,1">
                    <TextBlock Text="RECENT EVENTS" Foreground="#FF90A4AE" FontSize="11" FontWeight="Bold" 
                               VerticalAlignment="Center" Margin="10,0"/>
                </Border>
                
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <Border Background="#FF1E2433" Padding="8,5" Margin="0,0,0,5">
                            <StackPanel>
                                <TextBlock Text="22:45:12 - Process Started" Foreground="#FF4CAF50" FontSize="10" FontFamily="Consolas"/>
                                <TextBlock Text="Operator: Admin" Foreground="#FF78909C" FontSize="9" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Background="#FF1E2433" Padding="8,5" Margin="0,0,0,5">
                            <StackPanel>
                                <TextBlock Text="22:30:05 - Tank Filled" Foreground="#FF29B6F6" FontSize="10" FontFamily="Consolas"/>
                                <TextBlock Text="Level: 65%" Foreground="#FF78909C" FontSize="9" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Background="#FF1E2433" Padding="8,5">
                            <StackPanel>
                                <TextBlock Text="22:15:00 - System Ready" Foreground="#FFFFA726" FontSize="10" FontFamily="Consolas"/>
                                <TextBlock Text="All checks passed" Foreground="#FF78909C" FontSize="9" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
